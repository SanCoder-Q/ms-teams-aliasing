{
  "name": "MS Teams Aliasing",
  "description": "Be able to give name alias to the chat of MS Teams",
  "version": "0.1",
  "manifest_version": 3,
  "icons": {
    "16": "90.png",
    "48": "90.png",
    "128": "128.png"
  },
  "permissions": [
    "scripting",
    "webNavigation",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://teams.microsoft.com/*"
  ],
  "action": {
    "default_popup": "config.html",
    "default_icon": {
      "16": "90.png",
      "48": "90.png",
      "128": "128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
